{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/CosslayTeam/tree/main/data/source.schema.json",
  "title": "CosSlay Item Source",
  "description": "An way to acquire an item in RuneScape",
  "type": "object",
  "params": {
    "type": {
      "type": "string",
      "enum": [
        "spawn",
        "shop",
        "craft",
        "drop_table"
      ]
    },
    "source_name": {
      "type": "string"
    },
    "drop_rate": {
      "type": "number"
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "price": {
      "type": "number"
    },
    "location": {
      "description": "Where the item can be acquired",
      "$ref": "https://github.com/CosslayTeam/tree/main/data/location.schema.json"
    },
    "requirements": {
      "description": "The requirements to obtain the item this way",
      "$ref": "https://github.com/CosslayTeam/tree/main/data/requirements.schema.json"
    }
  },
  "required": [
    "type",
    "source_name"
  ]
}